<Page
    x:Class="StreamingApp.UWP.MainPageUser"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:StreamingApp.UWP"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	xmlns:local11="using:StreamingApp.Domain.Models"
    RequestedTheme="Dark"
	xmlns:local1="using:StreamingApp.UWP.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="MovieTemplate"                           >
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text="{Binding Category}" />
                <Image x:Name="posterImage" Source="{Binding Thumb}" Width="200" Height="300" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="902*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <NavigationView x:ConnectionId='5' 
     x:Name="nvMain" 
     IsSettingsVisible="False"
     OpenPaneLength="200"
                                      Grid.RowSpan="3"
     PaneDisplayMode="Top"
     IsBackEnabled="{Binding ElementName=frmMainUser, Path=CanGoBack}" 
     Background="#1C2230">
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="inicio">
                    <Grid Height="35" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
                        <Image Source="ms-appx:///Assets/logo.png" Stretch="Uniform" />
                    </Grid>
                </NavigationViewItem>
                <NavigationViewItem  Content="HOME" Tag="inicio" />
               
                <NavigationViewItem  Content="MOVIES" Tag="filmes" />
               
                <NavigationViewItem  Content="SERIES" Tag="series" />
                
                <NavigationViewItem  Content="FAVORITES" Tag="favoritos" />
                
                <NavigationViewItem Tag="quiz">
                    <Grid Height="35" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Orange" CornerRadius="5">
                        <FontIcon Glyph="&#xE735;" Foreground="Black" />
                    </Grid>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.PaneFooter>
                <NavigationViewItem x:ConnectionId='6' Content="" Tag="contact"                           >
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Contact" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.PaneFooter>
            <Frame x:ConnectionId='7' x:Name="frmMainUser"></Frame>
        </NavigationView>
    </Grid>
</Page>

